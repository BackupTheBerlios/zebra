<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <groupId>zebra</groupId>
    <id>zebra-core</id>
    <name>Zebra Core Process Engine</name>
    <currentVersion>0.4-dev</currentVersion>
    <inceptionYear>2004</inceptionYear>
    <package>com.anite.zebra</package>
    <logo/>
    <organization>
        <name>Anite</name>
        <url>http://www.aniteps.com</url>
        <logo>/images/APS_logo.gif</logo>
    </organization>
    <gumpRepositoryId/>
    <description>This project is the core Zebra Engine and Interfaces.</description>
    <shortDescription>Zebra Core Engine</shortDescription>
    <url>http://www.aniteps.com</url>
    <siteDirectory>/var/www/docs/zebra-core</siteDirectory>
    <distributionDirectory>/var/www/repo</distributionDirectory>
    <repository>
        <connection>scm:cvs:pserver:anoncvs@cvs.tigris.org:/cvs:zebra/src/java/zebra-core</connection>
        <url>http://zebra.tigris.org/source/browse/zebra/src/java/zebra-core</url>
    </repository>        
    <developers>
        <developer>
            <name>Matt Norris</name>
            <id>mpn_uk</id>
            <email>matthew.norris@anite.com</email>
            <organization/>
            <roles>
                <role>Senior Architect</role>
            </roles>
        </developer>
        <developer>
            <name>Eric Pugh</name>
            <id>dep4b</id>
            <email>epugh@opensourceconnections.com</email>
            <organization>
                <name>OpenSource Connections</name>
                <url>http://www.opensourceconnections.com/</url>
            </organization>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>    
    </developers>
    <dependencies>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>           
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>                
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
            <url>http://jakarta.apache.org/log4j/</url>
        </dependency>   
    </dependencies>
    
    <build>
        <nagEmailAddress>matthew.norris@anite.com</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test*.java</include>
            </includes>
            <excludes/>
            <resources/>
        </unitTest>
        <resources>
            <resource>
                <directory>src/java</directory>
                <targetPath>/</targetPath>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
    
    <reports>
        <report>maven-changelog-plugin</report>
        <report>maven-changes-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-findbugs-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-jcoverage-plugin</report>
        <report>maven-statcvs-plugin</report> 
        <report>maven-junit-report-plugin</report> 
    </reports>
</project>
