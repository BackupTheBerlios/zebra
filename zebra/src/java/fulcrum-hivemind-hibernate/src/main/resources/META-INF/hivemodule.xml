<?xml version="1.0"?>
<module id="fulcrum.hibernate" version="1.0.0">
    <!-- hibernate session stuff -->
    <service-point id="Session" interface="net.sf.hibernate.Session"/>
    <service-point id="HibernateSessionFactory"
        interface="org.apache.fulcrum.hibernate.factory.HibernateSessionFactory" visibilty="private"/>
    <implementation service-id="HibernateSessionFactory">
        <invoke-factory model="singleton">
            <construct class="org.apache.fulcrum.hibernate.factory.HibernateSessionFactory"
                initialize-method="initializeService"/>
        </invoke-factory>
        <interceptor service-id="hivemind.LoggingInterceptor"/>
    </implementation>
    <implementation service-id="Session">
        <invoke-factory service-id="HibernateSessionFactory" model="threaded"/>
        <interceptor service-id="hivemind.LoggingInterceptor"/>
    </implementation>
</module>
