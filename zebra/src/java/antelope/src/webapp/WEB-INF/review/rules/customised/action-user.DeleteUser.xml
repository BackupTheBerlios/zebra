<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validation SYSTEM "WEB-INF/conf/Validation.dtd">

<validation requestLookupKey="action.user.DeleteUser">
  <!--Validation Specification : action.user_DeleteUser-->
  <parametervalidators>
    <parameter-validator name="action">
      <args />
      <validators>
        <validator class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
          <args />
        </validator>
      </validators>
    </parameter-validator>
    <parameter-validator name="template">
      <args />
      <validators>
        <validator class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
          <args />
        </validator>
      </validators>
    </parameter-validator>
    <parameter-validator name="username">
      <args />
      <validators>
        <validator class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
          <args />
        </validator>
      </validators>
    </parameter-validator>
  </parametervalidators>
  <request-validator name="action.user.DeleteUser">
		<args/>
		<validators>
			<validator class="com.anite.antelope.validation.NotNullValidator">
				<args>
					<!-- Arguments for NotNullValidator -->
					<argument name="isNullMessage" type="string" 
						value="You must select a user." />
					<argument name="keys" type="string" value="username" />
				</args>
			</validator>
		</validators>
	</request-validator>
</validation>

