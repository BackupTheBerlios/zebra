<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validation SYSTEM "WEB-INF/conf/Validation.dtd">

<validation requestLookupKey="action.formSample.SelectFormSubmit">
  <!--Validation Specification : action.formSample.SelectFormSubmit-->
  <parametervalidators>
    <parameter-validator name="action">
      <args />
      <validators>
        <validator class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
          <args />
        </validator>
      </validators>
    </parameter-validator>
    <parameter-validator name="size">
      <args />
      <validators>
        <validator class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
          <args />
        </validator>
      </validators>
    </parameter-validator>
    <parameter-validator name="height">
      <args />
      <validators>
		<validator class="com.anite.antelope.validation.SelectList">
			<args>
			<argument name="values" type="string" 
				value="Midget,Short,Average,Tall,Too Tall" 
				/>
			</args>
		</validator>
      </validators>
    </parameter-validator>
  </parametervalidators>
  <request-validator name="action.formSample.SelectFormSubmit" />
</validation>

