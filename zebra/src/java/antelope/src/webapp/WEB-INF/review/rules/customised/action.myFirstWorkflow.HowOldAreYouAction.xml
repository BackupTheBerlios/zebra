<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validation SYSTEM "WEB-INF/conf/Validation.dtd">
<validation requestLookupKey="action.myFirstWorkflow.HowOldAreYouAction">
	<!--Validation Specification : action.myFirstWorkflow.HowOldAreYouAction-->
	<parametervalidators>
		<parameter-validator name="action">
			<args />
			<validators>
				<validator 
					class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
					<args />
				</validator>
			</validators>
		</parameter-validator>
		<parameter-validator name="age">
			<args />
			<validators>
				<validator 
					class="com.anite.antelope.validation.IntegerValidator">
					<args>
						<argument name="failedMessage" type="string" 
							value="Invalid Integer, please re-enter" />
					</args>
				</validator>
			</validators>
		</parameter-validator>
		<parameter-validator name="done">
			<args />
			<validators>
				<validator 
					class="org.apache.turbine.component.review.validators.AlwaysTrueValidator">
					<args />
				</validator>
			</validators>
		</parameter-validator>
	</parametervalidators>
	<request-validator name="action.myFirstWorkflow.HowOldAreYouAction" />
</validation>