<?xml version="1.0"?>
<module id="fulcrum.security" version="1.0.0">
  <service-point id="authenticatorCrypto"
    interface="org.apache.fulcrum.security.authenticator.Authenticator">
    <invoke-factory>
      <construct class="org.apache.fulcrum.security.authenticator.CryptoAuthenticator">
        <!-- Optionally set crypto choice here -->
      </construct>
    </invoke-factory>
  </service-point>
  <service-point id="authenticatorNoop" interface="org.apache.fulcrum.security.authenticator.Authenticator">
    <invoke-factory>
      <construct class="org.apache.fulcrum.security.authenticator.NoOpAuthentiator">        
      </construct>
    </invoke-factory>
  </service-point>
  <service-point id="authenticatorTextMatch" interface="org.apache.fulcrum.security.authenticator.Authenticator">
    <invoke-factory>
      <construct class="org.apache.fulcrum.security.authenticator.TextMatchAuthentiator">        
      </construct>
    </invoke-factory>
  </service-point>
</module>
